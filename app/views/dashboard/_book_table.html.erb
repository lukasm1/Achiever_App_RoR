<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr class="sticky-top">
      <th>Favorite Book recommendations:</th>
    </tr>
  </thead>

  <tbody>

    <% if user_signed_in? %>

      <% current_user.favorites.where(likeable_type: "BookRecommendation").each do |favorite| %>

        <% book = @books.find(favorite.likeable_id) %>

          <div>

            <tr>

              <td>
                <%= link_to book.title, book %>
              </td>

            </tr>

          </div>

        <% end %>

      <% else %>

        <div>

          <tr>
            <td>
              Sign in to see your favorite books.
            </td>
          </tr>

        </div>

      <% end %>

    </tbody>
  </table>
