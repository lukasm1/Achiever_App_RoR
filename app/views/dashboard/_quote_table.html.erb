<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr class="sticky-top">
      <th width="75%">Favorite Quotes:</th>
    </tr>
  </thead>

  <tbody>

    <% if user_signed_in? %>

      <% current_user.favorites.where(likeable_type: "Quote").each do |favorite| %>

        <% quote = @quotes.find(favorite.likeable_id) %>

          <div>

            <tr>

              <td width="80%">
                <%= link_to quote.text, quote %>
              </td>
              
            </tr>

          </div>

        <% end %>

      <% else %>

        <div>

          <tr>

            <td>
              Sign in to see your favorite quotes.
            </td>

          </tr>

        </div>

      <% end %>

    </tbody>
  </table>
